{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.1",
  "description": "__MSG_extDescription__",
  "default_locale": "zh_CN",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "downloads",
    "clipboardWrite",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/i18n.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture-full-page": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "__MSG_cmdFullPage__"
    },
    "capture-visible": {
      "suggested_key": {
        "default": "Alt+Shift+V"
      },
      "description": "__MSG_cmdVisible__"
    },
    "capture-selection": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "__MSG_cmdSelection__"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
